[Unit]
Description=AdaptLight Voice-Controlled Lighting
After=network.target dev-ttyAMA0.device
Wants=dev-ttyAMA0.device

[Service]
Type=simple
User=root
WorkingDirectory=/home/lamp/adaptlight
EnvironmentFile=/home/lamp/adaptlight/.env
Environment=PYTHONUNBUFFERED=1
ExecStart=/home/lamp/adaptlight/venv/bin/python -m raspi.main
Restart=on-failure
RestartSec=5
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
